
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/background.jpg');">
  <div class="banner-content">
    <h1>WELCOME HOME</h1>
    <p>Rent unique places to stay from local hosts in 190+ countries.</p>
    <form action="#" class="form-inline">
      <div class="form-group">
        <input type="text" name="checkin" placeholder="checkin" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="checkout" placeholder="checkout" class="form-control">
      </div>
      <select class="form-control">
        <option value="1">1 person</option>
        <option value="2">2 people</option>
        <option value="3">3 people</option>
      </select>
      <input type="submit" value="Next" class="btn btn-primary">
    </form>
  </div>
</div>

<!-- Your features code -->
<div class="wrapper-icons text-center">
  <div class="container text-center">
    <div class="row">
      <% data.icons.each do |icon, info| %>
      <div class="col-xs-12 col-sm-6 col-med-3">
        <div class="card">
          <%= image_tag info.image, class: "" %>
          <h3><%= info.title %></h3>
          <p><%= info.description %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


<!-- Your cards code -->
<div class="wrapper-grey">
  <div class="container text-center">
  <h2>Your next trip</h2>
    <div class="row">
      <% data.listings.each do |name, info| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card-listing" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/<%= info.image %>');">
          <%= image_tag info.avatar, class: "avatar" %>
          <h3 class="card-category"><%= info.location %></h3>
          <div class="card-description">
            <h2><%= info.title %></h2>
            <p><%= info.description %></p>
          </div>
          <%= link_to :class => 'card-link' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Your newsletter code -->
<div class="wrapper-newsletter text-center">
  <h2>Get news from us</h2>
  <p>Leave us your mail and get news from us</p>
  <form action="#" class="form-inline">
    <div class="form-group">
      <input type="email" id="your-email" placeholder="bob@gmail.com" class="form-control">
    </div>
    <input type="submit" value="Subscribe" class="btn btn-primary">
  </form>
</div>

